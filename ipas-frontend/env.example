# IPAS Frontend Environment Configuration

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_AI_SERVICE_URL=http://localhost:8000/ai
REACT_APP_UPLOAD_URL=http://localhost:8000/upload
REACT_APP_WEBSOCKET_URL=ws://localhost:8000/ws

# Authentication
REACT_APP_AUTH_ENDPOINT=/auth/login
REACT_APP_TOKEN_STORAGE_KEY=ipas_token
REACT_APP_REFRESH_TOKEN_KEY=ipas_refresh_token

# AI Configuration
REACT_APP_AI_MODEL=gpt-4.1
REACT_APP_AI_CONFIDENCE_THRESHOLD=0.8
REACT_APP_AI_MAX_TOKENS=4000

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
REACT_APP_UPLOAD_TIMEOUT=30000

# Feature Flags
REACT_APP_ENABLE_SIMULATION=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_AUDIT_LOGGING=true

# Development
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=true
REACT_APP_LOG_LEVEL=info

# Production
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=2024-01-16

# External Services
REACT_APP_EHR_INTEGRATION_URL=http://localhost:8000/ehr
REACT_APP_CLAIMS_SYSTEM_URL=http://localhost:8000/claims
REACT_APP_PROVIDER_VERIFICATION_URL=http://localhost:8000/providers

# Security
REACT_APP_ENABLE_HTTPS=false
REACT_APP_CORS_ORIGIN=http://localhost:3000
REACT_APP_SESSION_TIMEOUT=3600000

# Analytics
REACT_APP_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_ANALYTICS_ENABLED=false

# Notifications
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_NOTIFICATION_SERVICE_URL=http://localhost:8000/notifications
